###############################################################################
# Definitions
###############################################################################

include Config

VER        = ipfire

THISAPP    = ids-ruleset-sources
TARGET     = $(DIR_INFO)/$(THISAPP)

###############################################################################
# Top-level Rules
###############################################################################

install : $(TARGET)

check :

download :

md5 :

###############################################################################
# Installation Details
###############################################################################

$(TARGET) :
	@$(PREBUILD)
	# Simple install the ruleset sources file.
	install -m 644 $(DIR_SRC)/config/suricata/ruleset-sources \
		/var/ipfire/suricata/
	@$(POSTBUILD)
