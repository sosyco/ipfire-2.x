###############################################################################
# Definitions
###############################################################################

include Config

VER        = ipfire

THISAPP    = stage1
TARGET     = $(DIR_INFO)/$(THISAPP)

###############################################################################
# Top-level Rules
###############################################################################

install : $(TARGET)

check :

download :

md5 :

###############################################################################
# Installation Details
###############################################################################

$(TARGET) :
	@$(PREBUILD)

	mkdir -pv $(TOOLS_DIR)/lib

ifeq "$(IS_64BIT)" "1"
	ln -svf lib $(TOOLS_DIR)/lib64
endif

	@$(POSTBUILD)
